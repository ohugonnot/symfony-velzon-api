{% extends '/yann/base.html.twig' %}
{% block body %}
    <h1>File</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Pr√©visualisation</th>
            <td>
                {% if fileExtension == 'jpg' or fileExtension == 'bmp' or fileExtension == 'png' %}
                    <a href="https://127.0.0.1:8000/{{ file.url }}">
                        <img src="https://127.0.0.1:8000/{{ file.url }}" alt="">
                    </a>
                {% endif %}
                {% if fileExtension == 'pdf' %}
                    <object data="https://127.0.0.1:8000/{{ file.url }}" type="application/pdf" width="1100"
                            height="800">

                        <p>It appears your Web browser is not configured to display PDF files.
                            No worries, just <a href="{{ file.url }}">click here to download the PDF file.</a>
                        </p>

                    </object>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ file.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ file.fileName }}</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>{{ file.category }}</td>
        </tr>
        {#        {% if file %} #}
        </tbody>
    </table>

    <a href="{{ path('app_file_index') }}">back to list</a>

    <a href="{{ path('app_file_edit', {'id': file.id}) }}">edit</a>

    {{ include('file/_delete_form.html.twig') }}
{% endblock %}
