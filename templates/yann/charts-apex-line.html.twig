{% extends '/yann/base.html.twig' %}
{% block body %}
    <div class="container-fluid">

        {{ include('partials/page-title.html.twig', {pagetitle: 'Apexcharts', title: 'Line Charts'}) }}
        <div class="row">
            <div class="col-xl-3">
                <a href="{{ path('app_objectif_new') }}">
                    <button type="button"
                            class="btn btn-primary waves-effect waves-light mb-3 mt-3"
                    >Ajouter un objectif
                    </button>
                </a>
            </div>
            </button>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Dumatos 2024</h4>
                    </div><!-- end card header -->

                    <div class="card-body">
                        <div id="line_chart_basic" data-colors='["--vz-primary"]' class="apex-charts"
                             dir="ltr"></div>
                    </div><!-- end card-body -->
                </div><!-- end card -->
            </div>
            <!-- end col -->
        </div>

    </div>
