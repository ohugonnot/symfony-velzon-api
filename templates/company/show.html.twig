{% extends '/yann/base.html.twig' %}


{% block body %}
    <h1>Company</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ company.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ company.name }}</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>{{ company.category }}</td>
        </tr>
        <tr>
            <th>Adress</th>
            <td>{{ company.adress }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ company.city }}</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>{{ company.country }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ company.email }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ company.phone }}</td>
        </tr>
        <tr>
            <th>Contacts</th>
            <td>
                <div class="row">
                    {% for contact in company.contacts %}
                        <div class="m-2 p-2 col-3 card card-text">
                            <p>
                                {{ contact.firstName }} {{ contact.lastName }}
                            </p>
                            <p>
                                {{ contact.phone }}
                            </p>
                            <p>
                                {{ contact.email }}
                            </p>
                            <p>
                                <a href="{{ path('app_contact_edit', {'id': contact.id }) }}">
                                    Ã©diter
                                </a>
                            </p>
                        </div>
                    {% endfor %}
                </div>

            </td>

        </tr>
        <tr>
            <th>Active</th>
            <td>{{ company.active ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>
    <div>
        <h2>Fichiers</h2>
        <ul>
            {% for file in company.files %}
                <li>
                    <a href="/{{ file.url }}">
                        {{ file.fileName }}
                        <span><a href="{{ path('app_file_edit', {'id': file.id }) }}">
                                edit
                            </a> ({{ file.fileSize | number_format(0, '', ',') }} ko)</span>
                        <span>
                            {{ include('company/_delete_form.html.twig') }}
                        </span>
                </li>
                </a>
            {% endfor %}
        </ul>
    </div>

    <a href="{{ path('app_company_index') }}">back to list</a>

    <a href="{{ path('app_company_edit', {'id': company.id}) }}">edit</a>

    {{ include('company/_delete_form.html.twig') }}
{% endblock %}
